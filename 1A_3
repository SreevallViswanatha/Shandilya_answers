// Write a program in C to read any Month Number in integer and display Month name in the word.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int month;

    printf("Enter the number of the month:");
    scanf("%d", &month);

    switch(month)
    {
    case 1:
        printf("The month's name is January.");
        break;
    case 2:
        printf("The month's name is February.");
        break;
    case 3:
        printf("The month's name is March.");
        break;
    case 4:
        printf("The month's name is April.");
        break;
    case 5:
        printf("The month's name is May.");
        break;
    case 6:
        printf("The month's name is June.");
        break;
    case 7:
        printf("The month's name is July.");
        break;
    case 8:
        printf("The month's name is August.");
        break;
    case 9:
        printf("The month's name is September.");
        break;
    case 10:
        printf("The month's name is October.");
        break;
    case 11:
        printf("The month's name is November.");
        break;
    case 12:
        printf("The month's name is December.");
        break;
    default:
        printf("You have entered an invalid number. Try again...");
    }
}
