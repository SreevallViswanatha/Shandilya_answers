// Write a program in C to read any digit, and display the word.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int digit;

    printf("Enter a digit:");
    scanf("%d", &digit);

    switch(digit)
    {
    case 0:
        printf("The digit's name is zero.");
        break;
    case 1:
        printf("The digit's name is one.");
        break;
    case 2:
        printf("The digit's name is two.");
        break;
    case 3:
        printf("The digit's name is three.");
        break;
    case 4:
        printf("The digit's name is four.");
        break;
    case 5:
        printf("The digit's name is five.");
        break;
    case 6:
        printf("The digit's name is six.");
        break;
    case 7:
        printf("The digit's name is seven.");
        break;
    case 8:
        printf("The digit's name is eight.");
        break;
    case 9:
        printf("The digit's name is nine.");
        break;
    default:
        printf("You have entered an invalid number. Try again...");
    }
}
