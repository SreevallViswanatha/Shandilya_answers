// Take two numbers from the user and display the largest.
#include <stdio.h>
#include <stdlib.h>
main()
{
    int number1, number2;
    printf("Enter the first number:");
    scanf("%d", &number1);
    printf("Enter the second number:");
    scanf("%d", &number2);
    (number1>number2)?printf("The first number is the largest."):printf("The second number is the largest.");
}
