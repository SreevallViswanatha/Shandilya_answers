// WAP to check whether a given number is positive or negative.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number;

    printf("Enter a number:");
    scanf("%d", &number);

    if(number>0)
        printf("The number is positive.");
    else if(number==0)
        printf("The number is 0.");
    else
        printf("The number is negative.");
}
