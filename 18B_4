// Accept two numbers and display the smallest.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number1, number2, smallest;

    printf("Enter a number:");
    scanf("%d", &number1);

    printf("Enter a different number:");
    scanf("%d", &number2);

    smallest=(number1>number2)?number2:number1;

    printf("The smallest number is:%d.", smallest);
}
