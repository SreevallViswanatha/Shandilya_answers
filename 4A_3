// Find the largest of the three without using < or >

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number1, number2, number3, largest;

    printf("Enter a number:");
    scanf("%d", &number1);

    printf("Enter another number:");
    scanf("%d", &number2);

    printf("Enter another number:");
    scanf("%d", &number3);

    if((number1/number2)&&(number1/number3))
        largest=number1;
    else if(number2/number3)
        largest=number2;
    else
        largest=number3;

    printf("The largest is:%d.", largest);
}
