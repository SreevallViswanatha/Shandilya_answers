// Write a program in C to read any Month Number in integer and display the number of days for this month.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int month;

    printf("Enter the number of the month:");
    scanf("%d", &month);

    switch(month)
    {
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12:
        printf("The month has 31 days.");
        break;
    case 2:
        printf("The month February has 28 days.\n");
        printf("In a leap year, February has 29 days.");
        break;
    case 4:
    case 6:
    case 9:
    case 11:
        printf("The month has 30 days.");
    }
}
