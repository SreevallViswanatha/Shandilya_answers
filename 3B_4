// WAP to accept two numbers and change both numbers to the largest.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int first_number, second_number;

    printf("Enter a number:");
    scanf("%d", &first_number);

    printf("Enter another number:");
    scanf("%d", &second_number);

    if(first_number>second_number)
        second_number=first_number;
    else
        first_number=second_number;
    printf("The value of the first number is:%d.\n", first_number);
    printf("The value of the second number is:%d.", second_number);
}
