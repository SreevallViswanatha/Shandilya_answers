// WAP to accept a number and determine whether it is divisible by both 3 and 5 or if it is divisible by only 3 or if it is divisible by only 5 or none.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number;

    printf("Enter a number:");
    scanf("%d", &number);

    if((number%3==0)&&(number%5==0))
        printf("The number is divisible by both 3 and 5.");
    else if(number%5==0)
        printf("The number is divisible by 5.");
    else if (number%3==0)
        printf("The number is divisible by 3.");
    else
        printf("None.");
}
