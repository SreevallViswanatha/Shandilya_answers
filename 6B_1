// WAP to accept a coordinate point in an (x,y) coordinate system and determine in which quadrant the coordinate point lies.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int x, y;

    printf("Enter the x-coordinate:");
    scanf("%d", &x);

    printf("Enter the y-coordinate:");
    scanf("%d", &y);

    if((x>0)&&(y>0))
        printf("The point lies in the first quadrant.");
    else if(y>0)
        printf("The point lies in the second quadrant.");
    else if(x<0)
        printf("The point lies in the third quadrant.");
    else if(x>0)
        printf("The point lies in the fourth quadrant.");
    else
        printf("The point is the origin.");
}
