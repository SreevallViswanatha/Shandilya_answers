// WAP to check whether a triangle can be formed by the given value for the angles.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int angle1, angle2, angle3;
    
    printf("Enter the measure of the first angle:");
    scanf("%d", &angle1);
    
    printf("Enter the measure of the second angle:");
    scanf("%d", &angle2);
    
    printf("Enter the measure of the third angle:");
    scanf("%d", &angle3);
    
    if(angle1+angle2+angle3==180)
        printf("The triangle is valid.");
    else
        printf("The triangle is not valid.");
}
