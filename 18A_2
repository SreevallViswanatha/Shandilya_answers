// Output different sentences based on number given.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number;

    printf("Enter a number:");
    scanf("%d", &number);

    ((number==1)?printf("You would go to heaven."):
     (((number==2)?printf("Hell was created with you in mind."):
      printf("What about mother earth."))));
}
