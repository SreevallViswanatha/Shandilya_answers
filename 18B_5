// Accept three numbers and display the largest.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int number1, number2, number3, largest;

    printf("Enter a number:");
    scanf("%d", &number1);

    printf("Enter a different number:");
    scanf("%d", &number2);

    printf("Enter a different number:");
    scanf("%d", &number3);

    largest=(number1>number2)?((number1>number3)?number1:number3):((number2>number3)?number2:number3);

    printf("The largest is:%d.", largest);
}
