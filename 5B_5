// WAP to read the value of an integer "m" and display the value of "n."
// "n" is 1 if m>0, 0 when m=0, and -1 when m<0.

#include <stdio.h>
#include <stdlib.h>
main()
{
    int m, n;

    printf("Enter the value of m:");
    scanf("%d", &m);

    if(m!=0)
        {
            if(m>0)
                n=1;
            else
                n=-1;
        }
    else
        n=0;
    printf("The value of n is:%d.", n);
}
